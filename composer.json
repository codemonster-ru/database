{
    "name": "codemonster-ru/database",
    "description": "Lightweight, framework-agnostic database layer with PDO connections, fluent Query Builder, Schema Builder, and full migration system.",
    "type": "library",
    "license": "MIT",
    "readme": "README.md",
    "authors": [
        {
            "name": "Kirill Kolesnikov",
            "email": "admin@codemonster.net",
            "homepage": "https://github.com/KolesnikovKirill",
            "role": "Lead Developer"
        }
    ],
    "bin": [
        "bin/database"
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Codemonster\\Database\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Codemonster\\Database\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --testdox"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "homepage": "https://github.com/codemonster-ru/database",
    "keywords": [
        "database",
        "pdo",
        "mysql",
        "query",
        "query-builder",
        "sql",
        "schema",
        "migrations",
        "migration-runner",
        "database-manager",
        "db-layer",
        "orm-like",
        "php-database",
        "framework-agnostic",
        "codemonster"
    ],
    "support": {
        "issues": "https://github.com/codemonster-ru/database/issues",
        "source": "https://github.com/codemonster-ru/database"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
