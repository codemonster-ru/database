{
    "name": "codemonster-ru/database",
    "description": "Lightweight database layer with PDO-based connection, query runner, and extensible query builder.",
    "type": "library",
    "license": "MIT",
    "readme": "README.md",
    "authors": [
        {
            "name": "Kirill Kolesnikov",
            "email": "admin@codemonster.net",
            "homepage": "https://github.com/KolesnikovKirill",
            "role": "Lead Developer"
        }
    ],
    "bin": [
        "bin/database"
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6 || ^10.5 || ^11.0 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "Codemonster\\Database\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --testdox"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "homepage": "https://github.com/codemonster-ru/database",
    "keywords": [
        "database",
        "pdo",
        "mysql",
        "query",
        "query-builder",
        "sql",
        "db-layer",
        "lightweight",
        "php-database",
        "codemonster"
    ],
    "support": {
        "issues": "https://github.com/codemonster-ru/database/issues",
        "source": "https://github.com/codemonster-ru/database"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
